            @Html.DisplayFor(modelItem => item.cardMaxAllowed)
        </td>
        <td>
            @Html.ActionLink("Edit", "../CreditCards/Edit", new { id = item.cardID }) |
            @Html.ActionLink("Details", "../CreditCards/Details", new { id = item.cardID }) |
            @Html.ActionLink("Delete", "../CreditCards/Delete", new { id = item.cardID })
        </td>
    </tr>
